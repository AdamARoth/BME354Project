/* LCD Tutorial Objective 2: CREATE A NEW CHARACTER & ACTION FUNCTION
Created by KAVITHA PRASANNA, ALEXA CHOY, ADAM ROTH, TYLER HOBBS
*/
#include <LiquidCrystal.h>
LiquidCrystal lcd(8,9,4,5,6,7);

// Thumb up character
byte thumbup[8] = {
  B00000,
  B00100,
  B00010,
  B01110,
  B01110,
  B01110,
  B00000,
};

// Thumb down character
byte thumbdown[8] = {
  B00000,
  B01110,
  B01110,
  B01110,
  B00010,
  B00100,
  B00000,
};

void setup() {
  // create and write the thumb up and thumb down character to LCD
  lcd.createChar(0,thumbup);
  lcd.begin(16,2);
  lcd.write(byte(0));
  
  lcd.createChar(1,thumbdown);
  lcd.begin(16,2);
  lcd.write(byte(1));
}
  
void loop() {
  // Loop the animation of switching between thumb up and down
  lcd.write(byte(0));
  delay(1000);
  lcd.clear();
  
  lcd.write(byte(1));
  delay(1000);
  lcd.clear();
}
