void runReflowMode()
{
  int reflowcheck = read_LCD_buttons();
  switch(reflowcheck)
  {
    case(btnLEFT):
    {
      exitREFLOW();
      break;
    }
    case(btnNONE):
    {
      optionsPID();
      setReflowCurve();
      runPID();
      exportMATLAB();
      printRunReflow();
      heatcont.heaterSafety(currTemp, setTemp,warnPoint,maxPoint);
      endREFLOW();
      break;
    }
  }
}
